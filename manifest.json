{
  "manifest_version": 2,
  "name": "Digs.fm",
  "author": "The Digs.fm team",
  "version": "0.3",
  "description": "Quickly add releases from Discogs, Spotify, Mixcloud or Bandcamp to your Digs.fm lists.",
  "homepage_url": "https://digs.fm",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "https://digs.fm/queued/add-from-extension"
  ],

  "page_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Want to Listen",
    "browser_style": true,
    "show_matches": [
        "https://www.discogs.com/master/*",
        "https://www.discogs.com/release/*",
        "https://open.spotify.com/album/*",
        "https://www.mixcloud.com/*/*",
        "https://*.bandcamp.com/album/*"
    ]
  }
}
